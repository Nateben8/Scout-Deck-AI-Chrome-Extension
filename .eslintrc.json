{
  "root": true,
  "env": { "browser": true, "es2022": true, "webextensions": true },
  "extends": ["eslint:recommended", "plugin:json-format/recommended", "prettier"],
  "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "overrides": [
    { "files": ["panel/**/*.js"], "env": { "browser": true } },
    { "files": ["background.js"], "env": { "browser": true } }
  ]
} 