{
  "manifest_version": 3,
  "name": "ScoutDeck AI",
  "short_name": "ScoutDeck AI",
  "version": "0.3.1",
  "description": "Right-side HUDL film breakdown panel with per-play notes & export.",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": ["*://*.hudl.com/*", "http://localhost:3000/*", "https://scoutdeck.ai/*", "https://www.scoutdeck.ai/*"],
  "action": {
    "default_title": "ScoutDeck AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.hudl.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel/panel.html",
        "panel/panel.css",
        "panel/panel.js",
        "hudl-detector.js",
        "storage.js",
        "utils/export.js",
        "icons/16.png",
        "icons/48.png",
        "icons/128.png"
      ],
      "matches": ["*://*.hudl.com/*"]
    }
  ]
} 